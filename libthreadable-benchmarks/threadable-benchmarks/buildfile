libs =
import libs += \
  libthreadable%lib{threadable} \
  doctest%lib{doctest} \
  libnanobench%lib{nanobench}

exe{threadable-benchmarks}: {hxx ixx txx cxx}{**} $libs
{
  test = true
  install = false
  test.arguments = --quiet=true
}

cxx.poptions =+ "-I$out_root" "-I$src_root"

if($cxx.id == 'gcc')
{
  cxx.coptions += -Wno-interference-size
}
