libs =
import libs += threadable%lib{threadable} google-benchmark%lib{benchmark}

switch $cxx.class
{
  case 'gcc' | 'clang' | 'clang-apple'
    import libs += libtbb%lib{tbb}
}

exe{*}:
{
  test = true
  install = false
}

exe{threadable-benchmarks}: {hxx ixx txx cxx}{**} $libs

cxx.poptions =+ "-I$out_root" "-I$src_root"
