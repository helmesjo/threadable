#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define THREADABLE_VERSION       $threadable.version.project_number$ULL
#define THREADABLE_VERSION_STR   "$threadable.version.project$"
#define THREADABLE_VERSION_ID    "$threadable.version.project_id$"
#define THREADABLE_VERSION_FULL  "$threadable.version$"

#define THREADABLE_VERSION_MAJOR $threadable.version.major$
#define THREADABLE_VERSION_MINOR $threadable.version.minor$
#define THREADABLE_VERSION_PATCH $threadable.version.patch$

#define THREADABLE_PRE_RELEASE   $threadable.version.pre_release$

#define THREADABLE_SNAPSHOT_SN   $threadable.version.snapshot_sn$ULL
#define THREADABLE_SNAPSHOT_ID   "$threadable.version.snapshot_id$"
